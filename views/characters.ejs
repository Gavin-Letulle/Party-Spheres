<%- include('./partials/header', { currentPage: 'characters'}) %>

<div class="characters-info">
    <h2>Characters</h2>
    <div class="characters-row">
        <% npcs.forEach((npc, index) => { %>
            <% if (index % 2 === 0) { %>
            <div class="characters-column">
            <% } %>
                <a href="/character/<%= npc.npc_id %>" class="character-link">
                    <div class="character-name-img">
                        <div class="character-name"><%= npc.npc_name %></div>
                        <div id="character-img">
                            <img src="<%= npc.img_path %>" alt="No image">
                        </div>
                    </div>
                </a>
            <% if (index % 2 === 1 || index === npcs.length - 1) { %> 
            </div>
            <% } %>
        <% }); %>
    </div>
</div>

<%- include('./partials/footer') %>
